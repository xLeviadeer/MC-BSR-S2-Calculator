<UserControl x:Class="MC_BSR_S2_Calculator.Utility.TextLabelAbove"
             x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MC_BSR_S2_Calculator.Utility.TextBoxes"
             mc:Ignorable="d" 
             Height="Auto"
             Width="Auto">

    <!-- TextLabelAbove Layout -->
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="18"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!-- TextLabelAbove Content -->
        <TextBlock x:Name="TextBlockLabel" Grid.Row="0"
                   Margin="3,3,3,0" FontSize="11"
                   Text="{Binding Path=LabelText, ElementName=root}"/>
    </Grid>
</UserControl>
