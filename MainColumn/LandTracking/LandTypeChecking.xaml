<UserControl x:Class="MC_BSR_S2_Calculator.MainColumn.LandTracking.LandTypeChecking"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MC_BSR_S2_Calculator.MainColumn.LandTracking"
             xmlns:util="clr-namespace:MC_BSR_S2_Calculator.Utility"
             xmlns:util_labeledinputs="clr-namespace:MC_BSR_S2_Calculator.Utility.LabeledInputs"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d">

    <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto">
        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/> <!-- GridSpacer margin row -->
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/> <!-- GridSpacer margin row -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Style="{StaticResource SubTitle}"
                       Text="Land Type Checking"/>
            <GridSplitter Grid.Row="0"
                          Height="3" IsEnabled="False" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                <GridSplitter.Background>
                    <SolidColorBrush Color="{x:Static util:ColorResources.InnerColorL3}"/>
                </GridSplitter.Background>
            </GridSplitter>

            <!-- Use Y Coordinate -->
            <util_labeledinputs:CheckBoxLabel x:Name="UseYCoordinate" Grid.Row="2"
                                              LabelText="Use Y Coordinate" LayoutMode="LeftSwapFit"
                                              CheckChanged="_useYCoordinateCheckChanged"/>

            <!-- Coordinates -->
            <util:CoordinateInput x:Name="Coordinates" Grid.Row="3"
                                  NameExtension="to Check"
                                  ShowYInput="False"
                                  CoordinatesChanged="_coordinatesCoordinatesChanged"/>
        
            <!-- Results -->
            <util:ControlStack x:Name="ResultsStack" Grid.Row="5"
                               ItemsSource="{x:Static local:LandTypeCheckingResult.ResultsCollection}"/>
        </Grid>
    </ScrollViewer>
</UserControl>
