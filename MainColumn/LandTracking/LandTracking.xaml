<UserControl x:Class="MC_BSR_S2_Calculator.MainColumn.LandTracking.LandTracking"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MC_BSR_S2_Calculator.MainColumn.LandTracking"
             mc:Ignorable="d" 
             Height="Auto"
             Width="Auto">
    
    <Grid x:Name="MainGrid">
        <TabControl x:Name="MainTabControl" Style="{StaticResource SubTabControlStyle}">
            
            <!-- Add New Property -->
            <TabItem x:Name="TabAddProperty" Style="{StaticResource SubTabStyle}"
                     Header="Add New Property">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <local:PropertyManager Grid.Column="0" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            
            <!-- Modify/View Properties -->
            <TabItem x:Name="TabModifyViewProperty" Style="{StaticResource SubTabStyle}"
                     Header="Modify/View Properties">
                
            </TabItem>

            <!-- Land Type Checking -->
            <TabItem x:Name="TabLandTypeChecking" Style="{StaticResource SubTabStyle}"
                     Header="Land Type Checking">
                
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
