<UserControl x:Class="MC_BSR_S2_Calculator.MainColumn.MainColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MC_BSR_S2_Calculator.MainColumn"
             xmlns:land="clr-namespace:MC_BSR_S2_Calculator.MainColumn.LandTracking"
             mc:Ignorable="d"
             Height="Auto"
             Width="Auto">
    
    <!-- MainGrid Layout -->
    <Grid x:Name="MainGrid">
        
        <!-- PlayerGrid Content -->
        <TabControl x:Name="MainTabControl" Style="{StaticResource MainTabControlStyle}">
            <TabItem x:Name="TabLandTracking" Style="{StaticResource MainTabStyle}" 
                     Header="Land Tracking">
                <land:LandTracking/>
            </TabItem>
            <TabItem x:Name="TabTest" Style="{StaticResource MainTabStyle}" Header="Test"/>
        </TabControl>
    </Grid>
</UserControl>
